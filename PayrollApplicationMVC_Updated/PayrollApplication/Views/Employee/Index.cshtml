@model IEnumerable<PayrollApplication.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
         <th style="background-color:blueviolet">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </th>
         <th style="background-color:blueviolet">
            @Html.DisplayNameFor(model => model.Name)
        </th>
         <th style="background-color:blueviolet">
            @Html.DisplayNameFor(model => model.Gender)
        </th>
         <th style="background-color:blueviolet">
            @Html.DisplayNameFor(model => model.ContactNo)
        </th>
         <th style="background-color:blueviolet">
            @Html.DisplayNameFor(model => model.Email)
        </th>
         <th style="background-color:blueviolet">
            @Html.DisplayNameFor(model => model.Position)
        </th>
         <th style="background-color:blueviolet">
            @Html.DisplayNameFor(model => model.Shift)
        </th>
         <th style="background-color:blueviolet">
            @Html.DisplayNameFor(model => model.Address)
        </th>
         <th style="background-color:blueviolet">Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Company.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shift)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td style="display:inline-flex;">
            @Html.ActionLink("Edit", "Edit", new { id=item.EmployeeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EmployeeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EmployeeId })
        </td>
    </tr>
}

</table>
