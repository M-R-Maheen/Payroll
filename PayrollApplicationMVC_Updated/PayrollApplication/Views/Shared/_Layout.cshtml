<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark nav-hover" style="background-color: blueviolet; color: white ">
        <div class="container">
            @Html.ActionLink("Payroll Web", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Company", "Index", "Company", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Employee", "Index", "Employee", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Salary", "Index", "Salary", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Tax", "Index", "Tax", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Payslip", "Index", "Payslip", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>
    <div class="container-fluid">
        <footer class=" text-center text-light p-2 " style="color: white; background-color: blueviolet;">
            <p class="mt-2">&copy; @DateTime.Now.Year -BD SOFTS GROUP LIMITED</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
