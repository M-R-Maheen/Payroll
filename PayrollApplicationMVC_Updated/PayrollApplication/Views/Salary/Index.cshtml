@model IEnumerable<PayrollApplication.Models.Salary>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th style="background-color:blueviolet">
            @Html.DisplayNameFor(model => model.Employee.Name)
        </th>
        <th style="background-color:blueviolet">
            @Html.DisplayNameFor(model => model.Employee.Company.CompanyName)
        </th>
         <th style="background-color:blueviolet">
            @Html.DisplayName("Salary Of Month")
        </th>
         <th style="background-color:blueviolet">
            @Html.DisplayNameFor(model => model.BasicSalary)
        </th>
         <th style="background-color:blueviolet">
            @Html.DisplayNameFor(model => model.GrossSalary)
        </th>
         <th style="background-color:blueviolet">Acrion</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Company.CompanyName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.SalaryType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BasicSalary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GrossSalary)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.SalaryId }) |
            @Html.ActionLink("Details", "Details", new { id = item.SalaryId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SalaryId })
        </td>
    </tr>
}

</table>
